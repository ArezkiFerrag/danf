doctype html
html
    head
        title Ajax App

        script.
            var require = {
                config: {
                    app: {
                        context: JSON.parse('!{_context}') || {}
                    }
                }
            };
        script(data-main='/app', src='/require', async)
    body
        p= '--- page-id: ' + random + ' ---'

        div(id='ajax-body')!= _view.body